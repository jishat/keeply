{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/features/*": ["src/components/features/*"],
      "@/lib/*": ["src/lib/*"],
      "@/contexts/*": ["src/contexts/*"],
      "@/styles": ["src/styles.css"],
      "@/hooks/*": ["src/hooks/*"]
    },
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false
  },
  "include": [
    "src/**/*",
    "*.js",
    "*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
